{
  "name": "bloom",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "dotenv -e .env.production -- prisma generate",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "reset:dev": "dotenv -e .env.development -- prisma migrate reset --force",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
    "generate:dev": "dotenv -e .env.development -- prisma generate",
    "generate:prod": "dotenv -e .env.production -- prisma generate",
    "seed:dev": "dotenv -e .env.development -- tsx prisma/seed.ts",
    "db:setup": "npm run migrate:dev && npm run seed:dev",
    "db:deploy": "npm run migrate:production",
    "studio:dev": "dotenv -e .env.development -- prisma studio",
    "studio:prod": "dotenv -e .env.production -- prisma studio",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
